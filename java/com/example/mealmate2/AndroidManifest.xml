<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/logo"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="Meal Mate"
        android:supportsRtl="true"
        android:theme="@style/Theme.MealMate2"
        tools:targetApi="31">
        <activity
            android:name=".CreateMealActivity"
            android:exported="false" />
        <activity
            android:name=".Mealc"
            android:exported="false" />
        <activity
            android:name=".MealsActivity"
            android:exported="false"
            android:theme="@style/Theme.MealMate2" />
        <activity
            android:name=".CountryActivity"
            android:exported="false" />
        <activity
            android:name=".CategoriesActivity"
            android:exported="false" />
        <activity
            android:name=".SearchActivity"
            android:exported="false" />
        <activity
            android:name=".CalendarActivity"
            android:exported="false" />
        <activity
            android:name=".Hallo"
            android:exported="false" />

        <provider
            android:name="com.google.android.gms.ads.MobileAdsInitProvider"
            android:authorities="${applicationId}.mobileadsinitprovider"
            android:enabled="false"
            android:exported="false"
            tools:ignore="WrongManifestParent" />

        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".MealDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="false" />
        <activity
            android:name=".FavoritsActivity"
            android:exported="false" /> <!-- Ensure exported is explicitly set to true -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>